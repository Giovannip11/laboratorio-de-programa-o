1)
programa 
{
  inclua biblioteca Matematica --> mat
  funcao inicio() 
  {
    inteiro n
    real vetorReais[100] // Vetor para armazenar os números reais
    real arredondamento

    escreva("Digite um valor de n:\n")
    leia(n)

    para(inteiro i=0;i<n;i++)
    {
       escreva("Digite um número real:\n")
       leia(vetorReais[i]) // Armazena cada número no vetor
    }
    
    escreva("Os números reais arredondados são:\n")
    para(inteiro i=0;i<n;i++)
    {
        arredondamento = mat.arredondar(vetorReais[i],2) 
        escreva("Arredondamento: ", arredondamento, "\n") 
    }
  }
}

