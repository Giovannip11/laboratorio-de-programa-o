1)
programa {
  funcao inicio() {
    inteiro numero, resultado
    escreva("Escreva um numero inteiro: ")
    leia(numero)
    resultado = numero -1
    escreva("O antecessor é: ",resultado)
    resultado = numero + 1
    escreva("\nO sucessor é : ",resultado)
  }
}
2)
programa {
  funcao inicio() {
    real numero,resultado
    escreva("Digite um número real: ")
    leia(numero)
    
    resultado = numero *2
    escreva("O seu dobro é: ", resultado)
    resultado = numero/3
    escreva("\nA sua terça parte é: ", resultado)
  }
}
3)
programa {
  funcao inicio() {
    real reais,dolares
    escreva("Escreva a quantidade de reais que voce tem na carteira: ")
    leia(reais)
    dolares = reais/5.15
    escreva("A quantidade de doláres que voce pode comprar é: ",dolares)
  }
}
4)
programa {
  funcao inicio() {
    real H,L,area,quatidadeTinta
    escreva("Escreva a altura em Metros: ")
    leia(H)
    escreva("\nEscreva a largura em Metros: ")
    leia(L)
    area=H*L
    quatidadeTinta = area /2
    escreva("Vai ser necessario ",quatidadeTinta," litros de tinta")
    
       
  }
}
5)
programa {
  funcao inicio() {
    real preco,promocao
    escreva("Escreva o valor do produto: ")
    leia(preco)
    promocao = preco - (preco*0.05)
    escreva("A promocao com 5% ficou:R$ ",promocao)
  }
}
6)
programa {
  funcao inicio() {
    real salario, salarioComAumento
    escreva("Escreva o salário do funcionário:")
    leia(salario)
    salarioComAumento = salario + (salario*0.15)
    escreva("O aumento foi de: ",salarioComAumento)
  }
}


